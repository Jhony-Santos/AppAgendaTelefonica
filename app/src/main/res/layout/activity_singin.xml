<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Contatinhos.activity_singin">

    <Button
        android:id="@+id/btn_login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="@+id/imp_pass"
        app:layout_constraintHorizontal_bias="0.62"
        app:layout_constraintStart_toStartOf="@+id/imp_pass"
        app:layout_constraintTop_toBottomOf="@+id/imp_pass" />

    <EditText
        android:id="@+id/imp_user"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/imp_user"
        android:inputType="textPersonName"
        android:text="@string/imp_user"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="79dp" />

    <EditText
        android:id="@+id/imp_pass"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="@string/imp_pass"
        android:inputType="numberPassword"
        app:layout_constraintEnd_toEndOf="@+id/imp_user"
        app:layout_constraintStart_toStartOf="@+id/imp_user"
        app:layout_constraintTop_toBottomOf="@+id/imp_user"
        android:autofillHints="" />

</androidx.constraintlayout.widget.ConstraintLayout>